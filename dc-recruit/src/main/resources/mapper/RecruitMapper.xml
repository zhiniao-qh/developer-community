<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.treeshell.recruit.mapper.RecruitMapper">
    <select id="selectByState" resultType="cn.treeshell.recruit.model.Recruit">
        SELECT * FROM recruit WHERE state = #{state} ORDER BY createtime LIMIT 10
    </select>

    <select id="selectByStateAndCreatetime" resultType="cn.treeshell.recruit.model.Recruit">
        SELECT * FROM recruit WHERE state = #{state} ORDER BY createtime DESC LIMIT 10
    </select>
</mapper>
